
<% @pics.each do |pic| %>
	<div class="span6 boxy text-center">

		<h1 class="h1-custom">
			Lesson: <%= pic.lesson %>
		</h1>

<!-- Add the image -->
		<%= image_tag pic.image %>

		<br />
		<h2>
			Emotion: <%= pic.emotion %>
			<br />
		
			Learned: <%= pic.learned %>
			<br />
		</h2>
	</div>
<% end %>

<div class="span6 offset3 text-center">
	<%= link_to 'Launch Again', new_pic_path, :class => 'btn btn-warning btn-large' %>
</div>

